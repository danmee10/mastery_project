<div class="span5 offset1">
  <%= @poem.original_text %>
  <br/>
  <br/>
  <br/>
  <br/>
  <%= render partial: "verse_form_options" %>
</div>



<div class="span5 offset1">
  <% @poem.default_verse_form.each do |stanza| %>
    <% if stanza.kind_of?(Array) %>
      <% stanza.each do |line| %>
        <%= line %>
        <%= Word.syllables(line) %>
        <br/>
      <% end %>
    <% else %>
      <%= stanza %>
        <br/>
    <% end %>
    <hr/>
  <% end %>
</div>


<div class="span4">
  <form class="form-search" action="/poems" method="get">
    <input type="text" class="input-medium search-query" name="search">
    <button type="submit" value="search" class="btn btn-primary">Search</button>
  </form>
</div>

<div class="text-center span7 offset1">
  <h3>Public Poems</h3>
  <div class="masonry-container">
    <% @poems.each do |poem| %>
      <div class="poem-pic text-center">
        <%= link_to image_tag(poem.pic), poem_path(poem.id) %>
        <div class="poem-title-link">
          <%= link_to "#{poem.title}", poem_path(poem.id), class: "poem-title-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

